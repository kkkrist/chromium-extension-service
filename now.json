{
  "name": "chrome-extension-service",
  "version": 2,
  "env": {
    "MONGODB_URI": "@mongodb-uri"
  },
  "regions": ["bru1"],
  "routes": [
    {
      "src": "^/$",
      "status": 301,
      "headers": {
        "Location": "https://github.com/kkkrist/chromium-extension-service"
      }
    },
    {
      "src": "/api(.*)",
      "headers": {
        "access-control-allow-headers": "Content-Type",
        "access-control-allow-origin": "*"
      }
    }
  ]
}
